+
+# Clearly identify the MinGW/MSYS environment
+export MSYS_LEGACY=1
+
+# This is a bootstrap loader to run all scripts present in the "/etc/profile.d"
+# directory. This prevents the need to modify this script in the future.
+if [ -d /etc/profile.d ]; then
+  for script in /etc/profile.d/*.sh; do
+    if [ -r "$script" ]; then
+      . "$script"
+    fi
+  done
+  unset script
+fi
